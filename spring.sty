\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{spring}[2025/12/23 Personal academic LaTeX setup]

% --------------------------------------------------
% Page geometry
% --------------------------------------------------
\RequirePackage[
  left=1.25in,
  right=1.25in,
  top=1.2in,
  bottom=1in
]{geometry}

% --------------------------------------------------
% Paragraph formatting
% --------------------------------------------------
\setlength{\parskip}{0pt}      % no extra space between paragraphs
\setlength{\parindent}{15pt}   % indentation at the start of each paragraph

% --------------------------------------------------
% Fonts (XeLaTeX / LuaLaTeX only)
% --------------------------------------------------
\RequirePackage{fontspec}
\RequirePackage{unicode-math}

% Main (serif) font
\setmainfont[
  ItalicFont=NewCM10-Italic.otf,
  BoldFont=NewCM10-Bold.otf,
  BoldItalicFont=NewCM10-BoldItalic.otf,
  SmallCapsFeatures={Numbers=OldStyle}
]{NewCM10-Regular.otf}

% Sans-serif font
\setsansfont[
  ItalicFont=NewCMSans10-Oblique.otf,
  BoldFont=NewCMSans10-Bold.otf,
  BoldItalicFont=NewCMSans10-BoldOblique.otf,
  SmallCapsFeatures={Numbers=OldStyle}
]{NewCMSans10-Regular.otf}

% Monospace font
\setmonofont[Scale=MatchLowercase]{Iosevka}
% \setmonofont[Scale=0.9]{FreeMono}

% % Math font
\setmathfont{NewCMMath-Regular.otf}

% \RequirePackage{cmbright}

% --------------------------------------------------
% Lists
% --------------------------------------------------
\RequirePackage{enumitem}
\setlist{
  topsep=6pt,
  itemsep=3pt,
  parsep=0pt,
  partopsep=0pt,
  leftmargin=*
}

% --------------------------------------------------
% Minted and code blocks
% --------------------------------------------------
\usepackage{minted}
\RecustomVerbatimEnvironment{Verbatim}{BVerbatim}{}
\newmintinline[lean]{lean4}{bgcolor=white}
\newminted[leancode]{lean4}{fontsize=\normalsize}
\usemintedstyle{solarized-light} % other options: arduino, emacs, autumn, tango

\newenvironment{leanblock}
  {\VerbatimEnvironment
   \begin{center}\begin{leancode}}
  {\end{leancode}\end{center}}

